<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:magical="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/root_layout">

  <com.magicalxu.library.CountDownTextView
      android:id="@+id/id_button_green"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:padding="15dp"
      magical:anim_in="@anim/bottom_in"
      magical:anim_out="@anim/top_out"
      magical:disable_background="@drawable/shape_login_btn_bg_disable"
      magical:enable_background="@drawable/shape_login_btn_bg"
      magical:text_color="@android:color/holo_green_light"
      magical:text_size="20sp"
      magical:tip_text="获取验证码"
      magical:total_time="20" />

  <com.magicalxu.library.CountDownTextView
      android:id="@+id/id_button_yellow"
      android:layout_width="150dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      magical:anim_in="@android:anim/slide_in_left"
      magical:anim_out="@android:anim/slide_out_right"
      magical:disable_background="@drawable/shape_bg_yellow_disable"
      magical:enable_background="@drawable/shape_bg_yellow_normal"
      magical:init_text="TextSwitcher"
      magical:text_color="@android:color/holo_red_light"
      magical:text_size="12sp"
      magical:tip_text="点击发送"
      magical:total_time="40" />

  <com.magicalxu.library.CountDownTextView
      android:id="@+id/id_button_normal"
      android:layout_width="150dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      magical:disable_background="@drawable/shape_login_btn_bg_disable"
      magical:enable_background="@drawable/shape_login_btn_bg"
      magical:text_color="@android:color/white"
      magical:text_size="16sp"
      magical:tip_text="点击重发"
      magical:total_time="3" />

  <LinearLayout
      android:layout_width="300dp"
      android:layout_height="44dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/shape_bg_edit"
      android:orientation="horizontal">

    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:hint="请输入验证码"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textColorHint="@android:color/darker_gray" />

    <com.magicalxu.library.CountDownTextView
        android:id="@+id/id_button_orange"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        magical:anim_in="@anim/bottom_in"
        magical:anim_out="@anim/top_out"
        magical:disable_background="@drawable/shape_disable"
        magical:enable_background="@drawable/shape_enable" />

  </LinearLayout>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:onClick="sendCode"
      android:text="@string/send" />

</LinearLayout>
